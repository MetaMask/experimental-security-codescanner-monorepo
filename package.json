{
  "name": "@witmicko/security-scanner-monorepo",
  "version": "1.0.0",
  "description": "Security Code Scanner - Monorepo",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/witmicko/security-scanner-monorepo.git"
  },
  "license": "ISC",
  "author": "witmicko",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -A run build",
    "lint": "yarn lint:misc --check && yarn lint:dependencies --check",
    "lint:fix": "yarn lint:misc --write && yarn lint:dependencies",
    "lint:misc": "prettier '**/*.json' '**/*.md' '**/*.yml' '**/*.js' '**/*.ts' '!.yarnrc.yml' --ignore-path .gitignore --no-error-on-unmatched-pattern",
    "lint:dependencies": "depcheck && yarn dedupe",
    "test": "yarn workspaces foreach -A run test",
    "clean": "yarn workspaces foreach -A run clean && node shared/scripts/clean-all.js",
    "check": "node shared/scripts/check-packages.js",
    "validate": "node shared/scripts/validate-actions.js",
    "install:all": "yarn install --immutable"
  },
  "devDependencies": {
    "@lavamoat/allow-scripts": "^3.3.1",
    "@lavamoat/preinstall-always-fail": "^2.1.0",
    "@metamask/auto-changelog": "^4.1.0",
    "depcheck": "^1.4.7",
    "prettier": "^3.5.3",
    "prettier-plugin-packagejson": "^2.5.10",
    "prettier-plugin-sh": "^0.15.0",
    "yaml": "^2.6.1"
  },
  "packageManager": "yarn@4.7.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "lavamoat": {
    "allowScripts": {
      "@lavamoat/preinstall-always-fail": false
    }
  }
}
